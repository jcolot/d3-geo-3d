{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "test/**/*-test.js",
        //"test/projection/clipcircle-test.js" 
      ],
      "autoAttachChildProcesses": true,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
